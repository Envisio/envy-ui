{
  "button": {
    "--light-blue": {
      "default": {
        "color": {
          "value": "{color.white.value}"
        },
        "background-color": {
          "value": "{color.viking-blue.value}"
        },
        "border": {
          "color": "#34aacd",
          "value": "{shape.border.value} {button.--light-blue.default.border.color}",
          "comment": "darken 7% from color.viking-blue.value"
        }
      },
      "hover": {
        "background-color": {
          "value": "{button.--light-blue.default.border.color}"
        }
      },
      "active": {
        "background-color": {
          "value": "#36c5ef",
          "comment": "saturate 25% from color.viking-blue.value"
        },
        "box-shadow": {
          "value": "none"
        }
      },
      "focus": {
        "border-color": {
          "value": "{button.--light-blue.default.border.color}"
        },
        "box-shadow": {
          "value": "{shape.focus-box-shadow.value} rgba(255,255,255,0.4)"
        }
      },
      "disabled": {
        "background-color": {
          "value": "{button.--light-blue.default.background-color.value}"
        },
        "border-color": {
          "value": "{button.--light-blue.default.border.color}"
        },
        "box-shadow": {
          "value": "none"
        },
        "opacity": {
          "value": "0.6"
        },
        "filter": {
          "value": "saturate(50%)"
        },
        "cursor": {
          "value": "default"
        }
      },
      "inactive": {
        "background-color": {
          "value": "{button.--light-blue.default.background-color.value}"
        },
        "border-color": {
          "value": "{button.--light-blue.default.border.color}"
        },
        "box-shadow": {
          "value": "none"
        },
        "cursor": {
          "value": "default"
        }
      }
    }
  }
}