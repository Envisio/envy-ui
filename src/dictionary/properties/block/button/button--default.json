{
  "button": {
    "--default": {
      "default": {
        "color": {
          "value": "{color-default.text.value}"
        },
        "background-color": {
          "value": "{color.white.value}"
        },
        "border": {
          "value": "{shape.border.value} {color.plain-gray.value}"
        }
      },
      "hover": {
        "background-color": {
          "value": "{color.light-gray.value}"
        }
      },
      "active": {
        "background-color": {
          "value": "#dff0f6",
          "comment": "lighten 3% from color.pale-light"
        },
        "border-color": {
          "value": "{color-default.focus-border.value}"
        },
        "box-shadow": {
          "value": "none"
        }
      },
      "focus": {
        "border-color": {
          "value": "{color-default.focus-border.value}"
        },
        "box-shadow": {
          "value": "{shape.focus-box-shadow.value} {color-default.focus-shadow.value}"
        }
      },
      "disabled": {
        "background-color": {
          "value": "{button.--default.default.background-color.value}"
        },
        "border": {
          "value": "{button.--default.default.border.value}"
        },
        "box-shadow": {
          "value": "none"
        },
        "opacity": {
          "value": "0.7"
        },
        "cursor": {
          "value": "default"
        }
      },
      "inactive": {
        "background-color": {
          "value": "{button.--default.default.background-color.value}"
        },
        "border": {
          "value": "{button.--default.default.border.value}"
        },
        "box-shadow": {
          "value": "none"
        },
        "cursor": {
          "value": "default"
        }
      }
    }
  }
}