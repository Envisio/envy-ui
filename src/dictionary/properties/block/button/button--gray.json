{
  "button": {
    "--gray": {
      "default": {
        "color": {
          "value": "{color.medium-gray.value}"
        }
      },
      "hover": {
        "color": {
          "value": "{color.gray.value}"
        }
      },
      "active": {
        "color": {
          "value": "{color.blue.value}"
        }
      },
      "disabled": {
        "color": {
          "value": "{button.--gray.default.color.value}"
        }
      },
      "inactive": {
        "color": {
          "value": "{button.--gray.default.color.value}"
        }
      }
    }
  }
}