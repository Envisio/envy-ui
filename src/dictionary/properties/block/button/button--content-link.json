{
  "button": {
    "--content-link": {
      "default": {
        "color": {
          "value": "{color.brand-primary.value}"
        }
      },
      "hover": {
        "color": {
          "value": "{color.brand-blue.value}"
        }
      },
      "active": {
        "color": {
          "value": "{color.progress-bar.value}"
        }
      },
      "disabled": {
        "color": {
          "value": "{button.--content-link.default.color.value}"
        }
      },
      "inactive": {
        "color": {
          "value": "{button.--content-link.default.color.value}"
        }
      }
    }
  }
}