{
  "button": {
    "--map": {
      "default": {
        "color": {
          "value": "inherit"
        },
        "background-color": {
          "value": "{color.white.value}"
        },
        "border": {
          "color": "{color.transparent.value}",
          "value": "{shape.border-dashed.value} {button.--map.default.border.color}"
        }
      },
      "hover": {
        "border-color": {
          "value":  "var(--color-viking-blue)"
        }
      },
      "active": {
        "background-color": {
          "value": "#dff0f6",
          "comment": "lighten 3% from color.pale-light"
        },
        "box-shadow": {
          "value": "none"
        },
        "border-color": {
          "value":  "var(--color-viking-blue)"
        }
      },
      "focus": {
        "border-color": {
          "value": "var(--color-viking-blue)"
        },
        "box-shadow": {
          "value": "{shape.focus-box-shadow.value} rgba(255,255,255,0.4)"
        }
      },
      "disabled": {
        "background-color": {
          "value": "{button.--map.default.background-color.value}"
        },
        "border-color": {
          "value": "{button.--map.default.border.color}"
        },
        "box-shadow": {
          "value": "none"
        },
        "filter": {
          "value": "saturate(90%) brightness(0.9) contrast(0.5)"
        },
        "opacity": {
          "value": "0.7"
        }
      },
      "inactive": {
        "background-color": {
          "value": "{button.--map.default.background-color.value}"
        },
        "border-color": {
          "value": "{button.--map.default.border.color}"
        },
        "box-shadow": {
          "value": "none"
        },
        "cursor": {
          "value": "default"
        }
      }
    }
  }
}