{
  "button": {
    "--green": {
      "default": {
        "color": {
          "value": "{color.white.value}"
        },
        "background-color": {
          "value": "{color.green.value}"
        },
        "border": {
          "color": "#336534",
          "value": "{shape.border.value} {button.--green.default.border.color}",
          "comment": "darken 5% from color.green.value"
        }
      },
      "hover": {
        "background-color": {
          "value": "{button.--green.default.border.color}"
        }
      },
      "active": {
        "background-color": {
          "value": "#268c28",
          "comment": "saturate 25% from color.green.value"
        },
        "box-shadow": {
          "value": "none"
        }
      },
      "focus": {
        "border-color": {
          "value": "{button.--green.default.border.color}"
        },
        "box-shadow": {
          "value": "{shape.focus-box-shadow.value} rgba(255,255,255,0.3)"
        }
      },
      "disabled": {
        "background-color": {
          "value": "{button.--green.default.background-color.value}"
        },
        "border-color": {
          "value": "{button.--green.default.border.color}"
        },
        "box-shadow": {
          "value": "none"
        },
        "opacity": {
          "value": "0.5"
        },
        "filter": {
          "value": "saturate(50%)"
        },
        "cursor": {
          "value": "default"
        }
      },
      "inactive": {
        "background-color": {
          "value": "{button.--green.default.background-color.value}"
        },
        "border-color": {
          "value": "{button.--green.default.border.color}"
        },
        "box-shadow": {
          "value": "none"
        },
        "cursor": {
          "value": "default"
        }
      }
    }
  }
}