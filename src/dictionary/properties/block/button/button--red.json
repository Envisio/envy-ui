{
  "button": {
    "--red": {
      "default": {
        "color": {
          "value": "{color.white.value}"
        },
        "background-color": {
          "value": "{color.red.value}"
        },
        "border": {
          "color": "#ac1419",
          "value": "{shape.border.value} {button.--red.default.border.color}",
          "comment": "darken 7% from color.red.value"
        }
      },
      "hover": {
        "background-color": {
          "value": "{button.--red.default.border.color}"
        }
      },
      "active": {
        "background-color": {
          "value": "#e52329",
          "comment": "lighten 10% from color.red.value"
        },
        "box-shadow": {
          "value": "none"
        }
      },
      "focus": {
        "border-color": {
          "value": "{button.--red.default.border.color}"
        },
        "box-shadow": {
          "value": "{shape.focus-box-shadow.value} rgba(255,255,255,0.4)"
        }
      },
      "disabled": {
        "background-color": {
          "value": "{button.--red.default.background-color.value}"
        },
        "border-color": {
          "value": "{button.--red.default.border.color}"
        },
        "box-shadow": {
          "value": "none"
        },
        "opacity": {
          "value": "0.5"
        },
        "filter": {
          "value": "saturate(50%)"
        },
        "cursor": {
          "value": "default"
        }
      },
      "inactive": {
        "background-color": {
          "value": "{button.--red.default.background-color.value}"
        },
        "border-color": {
          "value": "{button.--red.default.border.color}"
        },
        "box-shadow": {
          "value": "none"
        },
        "cursor": {
          "value": "default"
        }
      }
    }
  }
}