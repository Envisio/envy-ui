{
  "button": {
    "--mint-blue": {
      "default": {
        "color": {
          "value": "{color.white.value}"
        },
        "background-color": {
          "value": "{color.brand-primary-alt.value}"
        },
        "border": {
          "color": "#006a8b",
          "value": "{shape.border.value} {button.--mint-blue.default.border.color}",
          "comment": "darken 5% from color.brand-primary-alt.value"
        }
      },
      "hover": {
        "background-color": {
          "value": "{button.--mint-blue.default.border.color}"
        }
      },
      "active": {
        "background-color": {
          "value": "#0090be",
          "comment": "lighten 5% from color.brand-primary-alt.value"
        }
      },
      "focus": {
        "border-color": {
          "value": "{button.--mint-blue.default.border.color}"
        },
        "box-shadow": {
          "value": "{shape.focus-box-shadow.value} rgba(255,255,255,0.4)"
        }
      },
      "disabled": {
        "background-color": {
          "value": "{button.--mint-blue.default.background-color.value}"
        },
        "border-color": {
          "value": "{button.--mint-blue.default.border.color}"
        },
        "box-shadow": {
          "value": "none"
        },
        "opacity": {
          "value": "0.5"
        },
        "filter": {
          "value": "saturate(50%)"
        }
      },
      "inactive": {
        "background-color": {
          "value": "{button.--mint-blue.default.background-color.value}"
        },
        "border-color": {
          "value": "{button.--mint-blue.default.border.color}"
        },
        "box-shadow": {
          "value": "none"
        }
      }
    }
  }
}