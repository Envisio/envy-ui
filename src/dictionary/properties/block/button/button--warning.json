{
  "button": {
    "--warning": {
      "default": {
        "color": {
          "value": "{color.white.value}"
        },
        "background-color": {
          "value": "{color.overdue.value}"
        },
        "border": {
          "color": "#f77500",
          "value": "{shape.border.value} {button.--warning.default.border.color}",
          "comment": "darken 8% from color.overdue.value"
        }
      },
      "hover": {
        "background-color": {
          "value": "{button.--warning.default.border.color}"
        }
      },
      "active": {
        "background-color": {
          "value": "#ffa554",
          "comment": "lighten 10% from color.overdue.value"
        },
        "box-shadow": {
          "value": "none"
        }
      },
      "focus": {
        "border-color": {
          "value": "{button.--warning.default.border.color}"
        },
        "box-shadow": {
          "value": "{shape.focus-box-shadow.value} rgba(255,255,255,0.4)"
        }
      },
      "disabled": {
        "background-color": {
          "value": "{button.--warning.default.background-color.value}"
        },
        "border-color": {
          "value": "{button.--warning.default.border.color}"
        },
        "box-shadow": {
          "value": "none"
        },
        "opacity": {
          "value": "0.5"
        },
        "filter": {
          "value": "saturate(50%)"
        },
        "cursor": {
          "value": "default"
        }
      },
      "inactive": {
        "background-color": {
          "value": "{button.--warning.default.background-color.value}"
        },
        "border-color": {
          "value": "{button.--warning.default.border.color}"
        },
        "box-shadow": {
          "value": "none"
        },
        "cursor": {
          "value": "default"
        }
      }
    }
  }
}