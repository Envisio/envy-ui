{
  "button": {
    "--green": {
      "default": {
        "color": {
          "$value": "{color.white.$value}",
          "$type": "dimension"
        },
        "background-color": {
          "$value": "{color.green.$value}",
          "$type": "dimension"
        },
        "border": {
          "$value": "{shape.border.$value} {button.--green.default.border.$color}",
          "$type": "dimension",
          "$description": "darken 5% from color.green.value",
          "$color": "#336534"
        }
      },
      "hover": {
        "background-color": {
          "$value": "{button.--green.default.border.$color}",
          "$type": "dimension"
        }
      },
      "active": {
        "background-color": {
          "$value": "#268c28",
          "$type": "color",
          "$description": "saturate 25% from color.green.value"
        },
        "box-shadow": {
          "$value": "none",
          "$type": "dimension"
        }
      },
      "focus": {
        "border-color": {
          "$value": "{button.--green.default.border.$color}",
          "$type": "dimension"
        },
        "box-shadow": {
          "$value": "{shape.focus-box-shadow.$value} rgba(255,255,255,0.3)",
          "$type": "color"
        }
      },
      "disabled": {
        "background-color": {
          "$value": "{button.--green.default.background-color.$value}",
          "$type": "dimension"
        },
        "border-color": {
          "$value": "{button.--green.default.border.$color}",
          "$type": "dimension"
        },
        "box-shadow": {
          "$value": "none",
          "$type": "dimension"
        },
        "opacity": {
          "$value": "0.5",
          "$type": "dimension"
        },
        "filter": {
          "$value": "saturate(50%)",
          "$type": "dimension"
        },
        "cursor": {
          "$value": "default",
          "$type": "dimension"
        }
      },
      "inactive": {
        "background-color": {
          "$value": "{button.--green.default.background-color.$value}",
          "$type": "dimension"
        },
        "border-color": {
          "$value": "{button.--green.default.border.$color}",
          "$type": "dimension"
        },
        "box-shadow": {
          "$value": "none",
          "$type": "dimension"
        },
        "cursor": {
          "$value": "default",
          "$type": "dimension"
        }
      }
    }
  }
}