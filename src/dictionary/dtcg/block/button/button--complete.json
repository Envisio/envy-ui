{
  "button": {
    "--complete": {
      "default": {
        "background-color": {
          "$value": "inherit",
          "$type": "dimension"
        },
        "border": {
          "$value": "{shape.border.$value} {color.plain-gray.$value}",
          "$type": "dimension"
        }
      },
      "hover": {
        "color": {
          "$value": "{color.green.$value}",
          "$type": "dimension"
        },
        "border-color": {
          "$value": "{color.green.$value}",
          "$type": "dimension"
        },
        "background-color": {
          "$value": "{color.condition.$value}",
          "$type": "dimension"
        }
      },
      "active": {
        "color": {
          "$value": "{color.white.$value}",
          "$type": "dimension"
        },
        "border-color": {
          "$value": "{color.green.$value}",
          "$type": "dimension"
        },
        "background-color": {
          "$value": "{color.column.$value}",
          "$type": "dimension"
        }
      },
      "focus": {
        "color": {
          "$value": "{color.green.$value}",
          "$type": "dimension"
        },
        "border-color": {
          "$value": "{color.green.$value}",
          "$type": "dimension"
        },
        "background-color": {
          "$value": "{color.condition.$value}",
          "$type": "dimension"
        },
        "box-shadow": {
          "$value": "{shape.focus-box-shadow.$value} rgba(60, 118, 61, 0.2)",
          "$type": "color"
        }
      },
      "disabled": {
        "background-color": {
          "$value": "{button.--complete.default.background-color.$value}",
          "$type": "dimension"
        },
        "box-shadow": {
          "$value": "none",
          "$type": "dimension"
        },
        "opacity": {
          "$value": "0.7",
          "$type": "dimension"
        },
        "cursor": {
          "$value": "default",
          "$type": "dimension"
        }
      },
      "inactive": {
        "border": {
          "$value": "{button.--complete.default.border.$value}",
          "$type": "dimension"
        },
        "background-color": {
          "$value": "{button.--complete.default.background-color.$value}",
          "$type": "dimension"
        },
        "box-shadow": {
          "$value": "none",
          "$type": "dimension"
        },
        "cursor": {
          "$value": "default",
          "$type": "dimension"
        }
      }
    }
  }
}