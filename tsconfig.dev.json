{
  "compilerOptions": {
    "target": "ES2019",
    "module": "Node16",
    "jsx": "react-jsx",
    "moduleResolution": "node16",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    "lib": [
      "ES2020",
      "DOM"
    ],
    "baseUrl": ".",
    "paths": {
      "envy-ui": [
        "index.d.ts"
      ]
    }
  },
  "include": [
    "dev/ts-playground/**/*",
    "lib/**/*.js"
  ],
  "exclude": [
    "dev/ts-playground/vite.config.mjs"
  ]
}
