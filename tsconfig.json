{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true
  },
  "include": [
    "src/javascripts/**/*",
  ],
  "exclude": [
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.styleguide.js",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/**/tests/**",
    "styleguide",
    "scripts",
    "node_modules"
  ]
}